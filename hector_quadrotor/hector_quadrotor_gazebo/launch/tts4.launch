<?xml version="1.0"?>
<launch>
  <!-- General Simulation Parameters -->
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>

  <!-- Load the world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find hector_quadrotor_gazebo)/worlds/modelll.world"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>

  <!-- Spawn the first Hector Quadrotor -->
  <group ns="hector_quadrotor_1">
    <arg name="name" default="quadrotor_1"/>
    <arg name="tf_prefix" default="quadrotor_1"/>
    <arg name="x" default="0.0"/>
    <arg name="y" default="0.0"/>
    <arg name="z" default="0.0"/>
    <arg name="use_ground_truth_for_tf" default="true"/>
    <arg name="use_ground_truth_for_control" default="true"/>
    <arg name="use_pose_estimation" if="$(arg use_ground_truth_for_control)" default="false"/>
    <arg name="use_pose_estimation" unless="$(arg use_ground_truth_for_control)" default="true"/>

    <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor2.launch">
      <arg name="name" value="$(arg name)"/>
      <arg name="model" value="$(find hector_quadrotor_description)/urdf/quadrotor_hokuyo_utm30lx.gazebo.xacro"/>
      <arg name="tf_prefix" value="$(arg tf_prefix)"/>
      <arg name="x" value="$(arg x)"/>
      <arg name="y" value="$(arg y)"/>
      <arg name="z" value="$(arg z)"/>
      <arg name="use_ground_truth_for_tf" value="$(arg use_ground_truth_for_tf)"/>
      <arg name="use_ground_truth_for_control" value="$(arg use_ground_truth_for_control)"/>
      <arg name="use_pose_estimation" value="$(arg use_pose_estimation)"/>
    </include>
  </group>

  <!-- Spawn the second Hector Quadrotor -->
  <group ns="hector_quadrotor_2">
    <arg name="name" default="quadrotor_2"/>
    <arg name="tf_prefix" default="quadrotor_2"/>
    <arg name="x" default="5.0"/>
    <arg name="y" default="5.0"/>
    <arg name="z" default="0.0"/>
    <arg name="yaw" default="-1.57"/>
    <arg name="use_ground_truth_for_tf" default="true"/>
    <arg name="use_ground_truth_for_control" default="true"/>
    <arg name="use_pose_estimation" if="$(arg use_ground_truth_for_control)" default="false"/>
    <arg name="use_pose_estimation" unless="$(arg use_ground_truth_for_control)" default="true"/>

    <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor2.launch">
      <arg name="name" value="$(arg name)"/>
      <arg name="model" value="$(find hector_quadrotor_description)/urdf/quadrotor_hokuyo_utm30lx.gazebo.xacro"/>
      <arg name="tf_prefix" value="$(arg tf_prefix)"/>
      <arg name="x" value="$(arg x)"/>
      <arg name="y" value="$(arg y)"/>
      <arg name="z" value="$(arg z)"/>
      <arg name="yaw" value="$(arg yaw)"/>
      <arg name="use_ground_truth_for_tf" value="$(arg use_ground_truth_for_tf)"/>
      <arg name="use_ground_truth_for_control" value="$(arg use_ground_truth_for_control)"/>
      <arg name="use_pose_estimation" value="$(arg use_pose_estimation)"/>
    </include>
  </group>

</launch>

